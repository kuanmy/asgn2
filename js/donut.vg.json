      "width": 150,
      "height": 150,
      "transform": [
        {
          "filter": "datum.continent == 'Europe'"
        }
      ],
      "layer": [
        {
          "mark": {
            "type": "arc",
            "innerRadius": 50,
            "color": "#4477AA"
          },
          "encoding": {
            "theta": {
              "aggregate": "median",
              "field": "total",
              "scale": {"domain": [0, 100]}
            },
            "opacity": {
              "value": 0.3
            }
          }
        },
        {
          "mark": {
            "type": "arc",
            "innerRadius": 50,
            "color": "#4477AA"
          },
          "encoding": {
            "theta": {
              "aggregate": "median", 
              "field": "internetuserate",
              "scale": {"domain": [0, 100]}
            },
            "tooltip": [
              {
                "field": "continent",
                "type": "nominal",
                "title": "Continent"
              },
              {
                "aggregate": "median", 
                "field": "internetuserate",
                "title": "Median",
                "format": "d"
